</head>
<!-- Top nav bar (fixed) -->
<%- include('partials/_header.ejs') %>
<body class="main-body">
    <span class="text-outline title"><%= resources[0].name %></span>
    <!-- Route needs to be adjusted to grab resource_id-->
    <% for(const resource of resources) { %>
    <a href="/resources/<%- resource.resid %>">
      <div class="wrapper">
        <div class="resource-card text-outline" id="article-title"><%= resource.title%>
        <br><br>
          <div class="rating-box">
            <div class="rating" style=<%- `'width:${((resource.ratings / 5) * 100)}%'`%>>
            </div>
          </div>
         </div>
      </div>
    </a>
    <% } %>

    <%- include('partials/_footer.ejs') %>
</body>
</html>
